<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".new_order_sell">

    <EditText
        android:id="@+id/sell_dishname"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="@string/fontfamily"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:padding="10dp"
        android:background="@drawable/custom_text"
        android:textSize="20dp"
        android:hint="Enter Dish Name" />
    <EditText
        android:id="@+id/edit_price"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="@string/fontfamily"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:padding="10dp"
        android:background="@drawable/custom_text"
        android:textSize="20dp"
        android:hint="Enter The Price"
        android:inputType="numberDecimal" />
    <EditText
        android:id="@+id/edit_quantity"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="@string/fontfamily"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:padding="10dp"
        android:background="@drawable/custom_text"
        android:textSize="20dp"
        android:hint="Enter Quantity"/>

    <EditText
        android:id="@+id/editText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_marginTop="10dp"
        android:fontFamily="@string/fontfamily"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:padding="10dp"
        android:textSize="20dp"
        android:hint="Enter Description"
        android:background="@drawable/custom_text"
        android:inputType="textMultiLine" />


    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/lblcooktime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:layout_marginTop="10dp"
            android:fontFamily="@string/fontfamily"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:padding="10dp"
            android:textSize="20dp"
            android:text="Cook Date/Time"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/sell_cook_date"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                />

            <Button
                android:id="@+id/btn_cooked_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SELECT Date"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/sell_cook_time"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                />

            <Button
                android:id="@+id/btn_cooked_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SELECT TIME" />
        </LinearLayout>

        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/lblexpiretime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:layout_marginTop="10dp"
                android:fontFamily="@string/fontfamily"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="10dp"
                android:padding="10dp"
                android:textSize="20dp"
                android:text="Expire Date"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/sell_expire_date"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    />

                <Button
                    android:id="@+id/btn_expire_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SELECT DATE"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <EditText
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/sell_expire_time" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SELECT TIME"
                    android:id="@+id/btn_expire_time"/>
            </LinearLayout>


        </LinearLayout>
    </LinearLayout>
</LinearLayout>
